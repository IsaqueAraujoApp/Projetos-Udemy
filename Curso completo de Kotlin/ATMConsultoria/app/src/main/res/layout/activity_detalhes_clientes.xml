            app:layout_constraintBottom_toBottomOf="@+id/imageView2" android:layout_marginStart="23dp"
            app:layout_constraintStart_toEndOf="@+id/imageView2" android:layout_marginBottom="24dp"/>
    <TextView
            android:text="Naruto"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:id="@+id/textView2" android:layout_marginTop="41dp"
            android:layout_marginLeft="23dp" app:layout_constraintBottom_toBottomOf="@+id/textView3"
